			<sound target="firstperson" name="sounds/weapons:smg:fire_fp_single%env%" radius="150" static="1" />
			<sound target="thirdperson" name="sounds/weapons:smg:fire_3rd_single%env%" radius="150" static="1" />
		</action>
		
