			<muzzleflash>
				<firstperson effect="muzzleflash.AssaultRifle.SCAR" helper="muzzle_flash_effect" light_helper="muzzle_flash_light" light_radius="2" light_time="0.010" light_color="1,1,0.8" light_diffuse_mult="8" />
