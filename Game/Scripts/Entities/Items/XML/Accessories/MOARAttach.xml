<item name="MOARAttach" class="Item" >
	<params>
		<param name="giveable" value="1" />
		<param name="selectable" value="0" />
		<param name="droppable" value="0" />
		<param name="display_name" value="@mp_eAlienMOAR" />
	</params>
	<geometry>
		<firstperson name="objects/weapons/US/Alien_Weapon_Mount/moar_fp.chr"/>
		<thirdperson name="objects/weapons/US/MOAR/moar_tp.cgf"/>
	</geometry>
	<actions>
		<action name="idle">
			<animation target="firstperson" name="idle_01" />
		</action>
		<action name="fire_moar">
			<animation target="firstperson" name="fire_01" />
		</action>
		<action name="spin_up_moar">
			<animation target="firstperson" name="prefire_01"/>
		</action>
		<action name="spin_down_moar">
			<animation target="firstperson" name="postfire_01" />
		</action>
	</actions>
</item>
